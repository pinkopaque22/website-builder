<%= form_with(model: website, class: "contents") do |form| %>
  <% if website.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(website.errors.count, "error") %> prohibited this website from being saved:</h2>

      <ul>
        <% website.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5 flex flex-col items-center w-3/4 md:max-w-2xl md:w-full mx-auto">
    <%= form.label :name, "What do you want to call your new website?", class: "text-2xl" %>
    <div class="relative w-full">
      <%= form.text_field :name, class: "block shadow rounded-full border border-gray-400 outline-none px-3 py-2 mt-2 w-full pr-10", placeholder: "thenextbigthing.com" %>
      <div class="absolute right-2 top-3 group">
        <%= button_tag type: "submit" do %>
          <span class="sr-only">
            <%= website.persisted? ? "Update Website" : "Create Website" %>
          </span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 hover:text-indigo-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
